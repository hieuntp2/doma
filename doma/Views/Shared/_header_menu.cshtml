@using Microsoft.AspNet.Identity
@{
    doma.Models.AspNetUser user = null;
    if (Request.IsAuthenticated)
    {
        doma.Models.ProjectDMEntities db = new doma.Models.ProjectDMEntities();
        string userid = User.Identity.GetUserId();
        user = db.AspNetUsers.SingleOrDefault(t => t.Id == userid);
    }
}
<header class="main-header" ng-controller="cart_controller as controller">
    <!-- Logo -->
    <a href="../../Home" class="logo">Hàng Mã Hiếu Thắng</a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top" role="navigation">
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <!-- Messages: style can be found in dropdown.less-->
                <li class="dropdown messages-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" ng-click="init()">
                        <i class="fa fa-shopping-cart"></i>
                        <span class="label label-success">{{products.length}}</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="header">Giỏ hàng có {{products.length}} sản phẩm</li>
                        <li>
                            <!-- inner menu: contains the actual data -->
                            <ul class="menu">
                                <li ng-repeat="item in products track by item.count_number" style="cursor: pointer;" ng-click="changeitem(item.id)">
                                    <a>
                                        <div class="pull-left">
                                            <img ng-src="{{item.imgs[0].link}}" alt="User Image" />
                                        </div>
                                        <h4>
                                            {{item.name}}
                                        </h4>
                                        <p>Số lượng: {{item.number}}</p>
                                    </a>
                                </li><!-- end message -->
                            </ul>
                        </li>
                        <li class="footer" ng-click="checkoutcart()"><a href="#">Thanh toán, quản lý giỏ hàng</a></li>
                    </ul>
                </li>

                @if (Request.IsAuthenticated)
                {
                     <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <img src="@user.avatar" class="user-image" alt="User Image" />
                            <span class="hidden-xs">@user.HoTen</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header">
                                <img src="@user.avatar" class="img-circle" alt="User Image" />
                                <p>
                                    @user.HoTen
                                    <span>@user.UserName</span>
                                </p>
                            </li>
                            <!-- Menu Body -->
                            <li class="user-body">
                                <div class="col-xs-12 text-center">
                                    <a href="../../cart/history" class="btn btn-default btn-flat">Lịch sử mua hàng</a>
                                </div>
                            </li>


                            @if (User.IsInRole("Admin"))
                            {
                            <li class="user-body">
                                <div class="col-xs-12 text-center">
                                    <a href="../../admin" class="btn btn-default btn-flat">Quản lý website</a>
                                </div>
                            </li>

                            }
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href="#" class="btn btn-default btn-flat">Tài khoản</a>
                                </div>
                                <div class="pull-right">
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                    {
                                    @Html.AntiForgeryToken()
                                    <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Đăng xuất</a>
                                    }
                                </div>
                            </li>
                        </ul>
                    </li>

                }
                else
                {
                    <ul class="nav navbar-top-links navbar-right">
                        <!-- Account -->
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li>
                                    <a href="/Account/Login"><i class="fa fa-user fa-fw"></i>Đăng nhập</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-gear fa-fw"></i>Giúp đỡ</a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="/Account/Register"><i class="fa fa-sign-out fa-fw"></i>Đăng ký</a>
                                </li>
                            </ul>
                            <!-- /.dropdown-user -->
                        </li>

                        <!-- /.dropdown -->
                    </ul>
                }
            </ul>
        </div>
    </nav>

    <div onclick="redirectgiohang()" role="button" style=" right: 5px; bottom: 60px; position: fixed; border-radius: 5px 5px 5px 5px; padding: 10px 15px; font-size: 16px; z-index: 99999; cursor: pointer; box-shadow: rgba(0, 0, 0, 0.0980392) 0px 1px 3px; background: rgb(60, 141, 188);">
        <a style=" color: white;">
            <i class="fa fa-shopping-cart"></i>
            <span class="sr-only">Toggle navigation</span>
            <strong style="color:white;">{{products.length}}</strong>
        </a>
    </div>
</header>
<script src="~/scripts/my_js/cart_controller.js"></script>


