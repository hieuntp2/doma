@model IEnumerable<doma.Models.DonHang>

@{
    ViewBag.Title = "history";
}

<div class="box box-info">
    <div class="box-header"><h4>Lịch sử mua hàng</h4></div>
    <div class="box-body">
        <div class="box-group" id="accordion">
            <!-- we are adding the .panel class so bootstrap.js collapse plugin detects it -->
            @foreach (var item in Model)
            {
                <div class="panel box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#@item.ID" aria-expanded="false" class="collapsed">
                               [Mã: @item.ID] Ngày mua: @item.NgayTao
                            </a>
                        </h4>
                    </div>
                    <div id="@item.ID" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                        <div class="box-body">
                            <p>Tình trạng: @item.TinhTrang</p>
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <td>Tên mặt hàng</td>
                                        <td>Số lượng</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var p in item.ChiTietDonHangs)
                                    {
                                        <tr>
                                            <td>@p.SanPham.Ten</td>
                                            <td>@p.SoLuong</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }


        </div>

    </div>
    <div class="box-footer"></div>
</div>